##making multiple line graph
ggplot(data, aes(x= , y= , color=as.factor( `grouping column` ))) +
  geom_line(stat="identity")

##making an alluvium diagram
ggplot(df4, aes(x = , stratum = Action, alluvium = Freq, fill = Action, label=Action)) + #Freq: you are identifying the column that is going to be "counted" like a User_id or patient #
  geom_flow(stat = "alluvium", lode.guidance='rightleft', aes(color=Action)) + #this is responsible for mapping the connections between your buckets from one X to the next ie "new student in FY25" to "returning student in FY26"
  geom_stratum() #this creates your rectangular "buckets" at each node ie "new students", "returning student", "departed student"

